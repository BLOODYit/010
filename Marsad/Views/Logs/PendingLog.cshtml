@model PagedList.IPagedList<Marsad.Models.PendingLog>
@using PagedList.Mvc;
@using Marsad.Helpers;

@{
    ViewBag.Title = "مراجعة البيانات المعلقة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>مراجعة البيانات المعلقة</h1>
            <hr />
            <div class="col-sm-8 offset-sm-2">
                <form action="@Url.Action("Index")">
                    <div class="input-group">
                        <input class="form-control" name="searchString" value="@ViewBag.CurrentFilter" placeholder="بحث" />
                        <span class="input-group-btn">
                            <input type="submit" value="بحث" class="btn btn-primary" />
                        </span>
                    </div>
                </form>
            </div>
            <table class="table table-striped jambo_table">
                <thead>
                    <tr>
                        <th>
                            <a href="@Url.Action("Index",new { sortOrder=ViewBag.CodeSortParm,currentFilter=ViewBag.CurrentFilter})">
                                <i class="@Html.GetSortingClass((string)ViewBag.CurrentSort,"Code")"></i> كود العملية
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index",new { sortOrder=ViewBag.NameSortParm,currentFilter=ViewBag.CurrentFilter})">
                                <i class="@Html.GetSortingClass((string)ViewBag.CurrentSort,"Name")"></i> المعادلة
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action(" Index",new { sortOrder=ViewBag.UserSortParm,currentFilter =ViewBag.CurrentFilter})">
                                <i class="@Html.GetSortingClass((string)ViewBag.CurrentSort," User")"></i> المستخدم
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action(" Index",new { sortOrder=ViewBag.DateSortParm,currentFilter =ViewBag.CurrentFilter})">
                                <i class="@Html.GetSortingClass((string)ViewBag.CurrentSort," Date")"></i> تاريخ العملية
                            </a>
                        </th>
                        <th>
                            
                                تحديث القيم                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>

            <div class="col-md-2">صفحة @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</div>
            @if (Model.PageCount > 1)
            {
                <div class="col-md-8">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
            }


        </div>
    </div>
</div>
