@model Marsad.Models.Equation
@using Marsad.Models.Controls

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>إنشاء معادلة</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Indicator.BundleID, null, htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                    <div class="col-sm-10 col-xs-12">
                        @Html.DropDownList("BundleID", null, htmlAttributes: new { @class = "form-control", @id = "BundleID" })
                        @Html.ValidationMessageFor(model => model.IndicatorID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IndicatorID, null, htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                    <div class="col-sm-10 col-xs-12">
                        <select id="IndicatorID" name="IndicatorID" class="form-control" required></select>
                        @Html.ValidationMessageFor(model => model.IndicatorID, "", new { @class = "text-danger" })
                    </div>
                </div>

                @{
                    var years = ViewBag.Years;
                }
                <div id="years">
                    @if (years != null && years.Length > 0)
                    {
                        <div class="form-group">
                            <label class="control-label col-sm-2 col-xs-12">السنة</label>
                            <div class="col-sm-9 col-xs-12">
                                <input name="years" class="form-control year" required value="@years[0]" />
                            </div>
                            <div>
                                <button class="btn btn-success" type="button" id="add_year">+</button>
                            </div>
                        </div>

                        for (int i = 1; i < years.Length; i++)
                        {
                            <div class="form-group">
                                <label class="control-label col-sm-2 col-xs-12">السنة</label>
                                <div class="col-sm-9 col-xs-12">
                                    <input name="years" class="form-control year" required value="@years[i]" />
                                </div>
                                <div>
                                    <button class="btn btn-danger del_year" type="button" id="del_year">X</button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="form-group">
                            <label class="control-label col-sm-2 col-xs-12">السنة</label>
                            <div class="col-sm-9 col-xs-12">
                                <input name="years" class="form-control year" required value="" />
                            </div>
                            <div>
                                <button class="btn btn-success" type="button" id="add_year">+</button>
                            </div>
                        </div>
                    }
                    <div class="col-sm-offset-3">
                        @Html.ValidationMessage("years", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2 col-xs-12"></label>
                    <div class="col-sm-10 col-xs-12">
                        <select multiple name="Elements" id="elements" class="form-control" size="6">
                            @foreach (var key in ViewBag.Elements.Keys)
                            {
                                <option value="@key">@ViewBag.Elements[key]</option>
                            }
                        </select>
                        <button type="button" class="btn btn-primary" id="add-element">إضافة</button>
                        <button type="button" class="btn btn-primary" id="add-new-element">إضافة عنصر جديد</button>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Partial("~/Views/Shared/Controls/_Equation.cshtml", new EquationModel() { ID = "EquationText", Name = "EquationText", Value = (Model!=null?Model.EquationText:"") })
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12"></div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            @Html.ValidationMessageFor(model => model.EquationText, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10 col-xs-12">
                        <input type="submit" value="إنشاء" class="btn btn-success" />
                        @Html.ActionLink("الرئيسية", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>


<div class="modal fade" id="addElementModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">إضافة عنصر جديد</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
@section Scripts{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#add-element').click(function () {
                $('#elements option:selected').each(function () {
                    $('#equation_text').val($('#equation_text').val() + "[" + $(this).text() + "]");
                });
            });

             $('#add-new-element').click(function () {
                $.get('@Url.Action("GetCreateElement","Elements")').done(function (res) {
                    $mymodal = $("#addElementModel");
                    $mymodal.find("div.modal-body").html(res);
                    $mymodal.modal("show");
                });
             });

            $('#add_year').click(function () {
                var add_year = '<div class="form-group">' +
                    '<label class="control-label col-sm-2 col-xs-12" for="Year">السنة</label>' +
                    '<div class="col-sm-9 col-xs-12">' +
                    '<input name="years" class="form-control year" required/>' +
                    '</div>' +
                    '<div>' +
                    '<button class="btn btn-danger del_year" type="button" >X</button>' +
                    '</div>' +
                    '</div>';
                $('#years').append(add_year);

                bindItems();
            });

            $('#BundleID').change(function (e) {
                var id = $(this).val();
                $('#IndicatorID option').remove();
                $.get("@Url.Action("GetIndicators","Bundles")/" + id, function (data,status) {
                    data.data.forEach(function (e, i) {
                        $('#IndicatorID').append("<option value='"+e.ID+"'>"+e.Name+"</option>");
                    });
                });
            });
            bindItems();
            $('#BundleID').change();
        });
        function bindItems() {
              $('.year').datepicker({
                format: 'yyyy',
                viewMode: "years",
                minViewMode: "years",
                yearRange: '1300:1500'
            });
            $('.year').click(function () {
                if ($(this).val() == '') {
                    $(this).val(@ViewBag.CurrentHijriYear);
                    $(this).keyup();
                }
            });
             $('.del_year').click(function () {
                    $(this).parent().parent().remove();
                });
        }
    </script>
}